# master memory
export CL2_MASTER_NODE_MEM=$master_memory

# warm up pods
export CL2_WARM_UP_CLUSTER=true
export CL2_WARM_UP_WORKLOAD_PER_NAMESPACE=${workload}
export CL2_WARM_UP_PODS_PER_WORKLOAD=${pods}

# list watch pods
